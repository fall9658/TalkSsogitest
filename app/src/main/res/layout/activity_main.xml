<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Page1Activity로 이동하는 버튼 -->
    <Button
        android:id="@+id/button_open_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Page 1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Page3Activity로 이동하는 버튼 -->
    <Button
        android:id="@+id/button_open_page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Page 3"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_open_page1"
        android:layout_marginTop="20dp"/>

    <!-- Fragment를 표시할 컨테이너 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_open_page3"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
